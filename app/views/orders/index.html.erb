<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>日期</th>
      <th>时间</th>
      <th>Customer</th>
      <th>Price</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Payment</th>
      <th>Notes</th>
      <th colspan="3">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.reverse_each do |order| %>
      <tr>
        <td><%= order.updated_at.strftime("%Y-%m-%d") %></td>
        <td><%= order.updated_at.strftime("%H:%M:%S") %></td>
        <td><%= order.customer %></td>
        <td><%= order.price %></td>
        <td><%= order.phone %></td>
        <td><%= order.address %></td>
        <td><%= order.payment %></td>
        <td><%= order.notes %></td>
        <td><%= link_to 'Show', order %></td>
        <!--<td><%= link_to 'Edit', edit_order_path(order) %></td>-->
        <!--<td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

